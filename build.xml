<project name="Lunr" default="build" basedir=".">

    <property name="system" value="system" />
    <property name="application" value="application" />
    <property name="config" value="config" />
    <property name="tests" value="tests" />

    <target name="clean"
            description="Cleanup and create build directories">
        <delete dir="${basedir}/build" />

        <mkdir dir="${basedir}/build/api" />
        <mkdir dir="${basedir}/build/code-browser" />
        <mkdir dir="${basedir}/build/coverage" />
        <mkdir dir="${basedir}/build/logs" />
        <mkdir dir="${basedir}/build/pdepend" />
    </target>

    <target name="pdepend"
            description="Generate jdepend.xml and software metrics charts using PHP_Depend">
        <exec executable="pdepend">
            <arg line=" --jdepend-xml=${basedir}/build/logs/jdepend.xml
                        --jdepend-chart=${basedir}/build/pdepend/dependencies.svg
                        --overview-pyramid=${basedir}/build/pdepend/overview-pyramid.svg
                        --ignore=${tests},${application}/libraries/third-party
                        ${basedir}" />
        </exec>
    </target>

    <target name="phpmd"
            description="Generate pmd.xml using PHPMD">
        <exec executable="phpmd">
            <arg line=" ${basedir}
                        xml
                        tests/phpmd.xml
                        --reportfile ${basedir}/build/logs/pmd.xml
                        --exclude    third-party
                        --suffixes   php" />
        </exec>
    </target>

    <target name="phpunit"
            description="Run unit tests and generate junit.xml and clover.xml">
        <exec executable="phpunit" failonerror="true">
            <arg line=" -c tests/phpunit.xml --verbose" />
        </exec>
    </target>

    <target name="phpdoc"
            description="Generate API documentation">
        <exec executable="phpdoc">
            <arg line=" --directory ${system},${application},${config}
                        --output    HTML:Smarty/Evolve:default
                        --target    ${basedir}/build/api
                        --parseprivate" />
        </exec>
    </target>

    <target name="phpcs"
            description="Generate checkstyle.xml using PHP_CodeSniffer">
        <exec executable="phpcs" output="/dev/null">
            <arg line=" --report=checkstyle
                        --report-file=${basedir}/build/logs/checkstyle.xml
                        --standard=Lunr
                        --ignore=third-party,html.*
                        ${system} ${application} ${config}" />
        </exec>
    </target>

    <target name="phpcpd"
            description="Generate pmd-cpd.xml using PHPCPD">
        <exec executable="phpcpd">
            <arg line=" --log-pmd   ${basedir}/build/logs/pmd-cpd.xml
                        --suffixes  php
                        --verbose
                        ${basedir}" />
        </exec>
    </target>

    <target name="phploc"
         description="Generate phploc.csv">
        <exec executable="phploc">
            <arg line=" --log-csv   ${basedir}/build/logs/phploc.csv
                        --suffixes  php
                        --verbose
                        --count-tests
                        ${basedir}" />
        </exec>
    </target>

    <target name="phpcb"
            description="Aggregate tool output with PHP_CodeBrowser">
        <exec executable="phpcb">
            <arg line=" --log    ${basedir}/build/logs
                        --source ${system}
                        --source ${application}
                        --source ${config}
                        --output ${basedir}/build/code-browser" />
        </exec>
    </target>

    <target name="l10n"
            description="Generate gettext language files">
        <exec executable="l10n/gen_l10n.sh" />
    </target>

    <target name="build" depends="clean,pdepend,phpmd,phpunit,phpcs,phpcpd,phpdoc,phploc,phpcb" />
</project>
