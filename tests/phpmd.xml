<?xml version="1.0"?>
<ruleset name="MidSchip PHPMD ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        This ruleset checks the MidSchip Code for potential problem cases
    </description>

    <!-- Import the entire unused code rule set -->
    <rule ref="rulesets/unusedcode.xml" />

    <!-- Import the entire naming rule set -->
    <rule ref="rulesets/naming.xml">
        <priority>1</priority>
        <properties>
            <property name="minimum" value="2" />
        </properties>
    </rule>

    <!-- Import the entire design rule set -->
    <rule ref="rulesets/design.xml" />

    <!-- Import the entire code size rule set -->
    <rule ref="rulesets/codesize.xml" />
</ruleset>